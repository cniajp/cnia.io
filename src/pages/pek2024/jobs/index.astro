---
import { getCollection } from 'astro:content';
import Layout from '~/layouts/pek2024/PageLayout.astro';
import JobCard from '~/components/pek2024/JobCard.astro';

const [platinumData, goldData, sliverData, blonzeData, lunchData] = await Promise.all([
  getCollection('pek2024-job-boards', (board) => board.data.rank === "platinum"),
  getCollection('pek2024-job-boards', (board) => board.data.rank === "gold"),
  getCollection('pek2024-job-boards', (board) => board.data.rank === "silver"),
  getCollection('pek2024-job-boards', (board) => board.data.rank === "bronze"),
  getCollection('pek2024-job-boards', (board) => board.data.rank === "lunch"),
])
const platinumContents = await Promise.all(platinumData.map(async job => {
  const { Content } = await job.render();
  return {
    data: job.data,
    Content,
  }
}));
const goldContents = await Promise.all(goldData.map(async job => {
  const { Content } = await job.render();
  return {
    data: job.data,
    Content,
  }
}));
const silverContents = await Promise.all(sliverData.map(async job => {
  const { Content } = await job.render();
  return {
    data: job.data,
    Content,
  }
}));
const blonzeContents = await Promise.all(blonzeData.map(async job => {
  const { Content } = await job.render();
  return {
    data: job.data,
    Content,
  }
}));
const lunchContents = await Promise.all(lunchData.map(async job => {
  const { Content } = await job.render();
  return {
    data: job.data,
    Content,
  }
}));
---
<Layout meta={{
  title: 'PEK2024 ジョブボード',
  description: 'Platform Engineering Kaigi 2024 スポンサー様の求人情報',
}}>
  <section class="bg-white">
    <div class="mb-10 text-center max-w-3xl mx-auto">
      <p class="text-base text-gray-600 font-semibold tracking-wide uppercase">Jobs</p>
      <h2 class="text-4xl md:text-5xl font-bold leading-tight tracking-tight">ジョブボード</h2>
    </div>
    <div class="bg-gray-100 py-8 px-2 md:px-4">
      <h2 class='text-slate-600 px-2 text-2xl font-bold mb-4 underline decoration-[#b2b19f]'>Platinum</h2>
      {
        platinumContents.map(({data, Content}) => (
          <JobCard data={data} Content={Content} />
        ))
      }
      <h2 class='text-slate-600 px-2 text-2xl font-bold mb-4 underline decoration-amber-300'>Gold</h2>
      {
        goldContents.map(({data, Content}) => (
          <JobCard data={data} Content={Content} />
        ))
      }
      <h2 class='text-slate-600 px-2 text-2xl font-bold mb-4 underline decoration-stone-200'>Silver</h2>
      {
        silverContents.map(({data, Content}) => (
          <JobCard data={data} Content={Content} />
        ))
      }
      <h2 class='text-slate-600 px-2 text-2xl font-bold mb-4 underline decoration-yellow-600'>Bronze</h2>
      {
        blonzeContents.map(({data, Content}) => (
          <JobCard data={data} Content={Content} />
        ))
      }
      <h2 class='px-2 text-2xl font-bold mb-4 underline decoration-lime-300'>Lunch</h2>
      {
        lunchContents.map(({data, Content}) => (
          <JobCard data={data} Content={Content} />
        ))
      }
    </div>
  </section>
</Layout>
