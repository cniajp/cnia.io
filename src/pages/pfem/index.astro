---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Sessions from '~/components/widgets/Sessions.astro';
import FullContent from '~/components/widgets/FullContent.astro';
import Features2 from '~/components/widgets/Features2.astro';
import { Picture } from '@astrojs/image/components';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Upcoming from '~/components/widgets/Upcoming.astro';

const meta = {
  title: 'Platform Engineering Meetup',
  description: 'Platform Engineeringについて考え方を学び、事例を共有していく勉強会',
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>

  <Hero>
    <Fragment slot="subtitle">
      <Picture
        src={import('~/assets/images/logo_on_white@4x.png')}
        alt=''
        sizes='400'
        widths={[2000]}
        position='center'
      />
    </Fragment>
  </Hero>

  <a id="about-pfem"></a>
  <Features
    highlight="About this event"
    title="このイベントについて"
    subtitle="Platform Engineeringは、開発者の認知負荷を下げ、セルフサービスで利用できるプラットフォームを提供し、迅速なアプリケーションの開発体験とデリバリーを実現する考え方です。Gartnerの予測によると、5年以内に80%のソフトウェアエンジニアリング組織が採用すると言われています。本ミートアップは、そんなPlatform Engineeringについて学び、発信していくことを目的としています。"
    items={[
      [
        {
          title: '考え方を知る',
          description:
            'Platform Engineeringは生まれてまだ日の浅い考え方です。本ミートアップでは、Platform Engineeringの考え方を学び、その背景にある考え方を知ります。',
          icon: 'tabler:school',
        },
        {
          title: '失敗から学ぶ',
          description:
            '上手くいった事例だけでなく、失敗から学ぶことも重要です。なぜ上手くいかなかったかを共有してもらい、次にどう生かしていくかを学びます。',
          icon: 'tabler:info-circle',
        }
      ],
      [
        {
          title: '先人に学ぶ',
          description:
            '素晴らしいプラットフォームを作り上げている先人から、生きた知識を学びます。',
          icon: 'tabler:user',
        },
        {
          title: '技術を知る',
          description:
            'Platform Engineeringを支える技術を学びましょう。日々生まれる技術やツールを上手く取り入れることで、良いチーム作りの一助になるでしょう。',
          icon: 'tabler:wand',
        }
      ],
    ]}
  />

  <Upcoming
  title="開催予定"
  highlight="Upcoming"
  items={[
    {
      event: 'Platform Engineering Meetup #4',
      date: '2023/08/02',
      place: '福岡',
      connpassUrl: 'https://platformengineering.connpass.com/event/290689/',
    },
    {
      event: 'Platform Engineering Meetup #5',
      date: '2023/10/05',
      place: '東京',
    },
  ]}
/>


  <a id="sessions"></a>
  <Sessions
    title="過去のセッション"
    highlight="Sessions"
    items={[
      {
        event: 'Platform Engineering Meetup #3',
        title: 'CNCFが考えるPlatform ー Platforms White Paperについて',
        speaker: '@jacopen',
        videoUrl: 'https://www.youtube.com/embed/CwDaS0E3FTo&t=798s',
        documentUrl: 'https://speakerdeck.com/jacopen/cncfgakao-eruplatform-platforms-white-papernituite',
      },
      {
        event: 'Platform Engineering Meetup #3',
        title: 'PlatformCon 2023 Recap',
        speaker: 'APC亀崎さん',
        videoUrl: 'https://www.youtube.com/embed/CwDaS0E3FTo&t=2430s',
        documentUrl: '',
      },
      {
        event: 'Platform Engineering Meetup #3',
        title: 'PlatformCon 2023 Recap',
        speaker: '@tanayan',
        videoUrl: 'https://www.youtube.com/embed/CwDaS0E3FTo&t=4634s',
        documentUrl: 'https://www.docswell.com/s/tananyan29/ZJL8QQ-2023-06-30-204644',
      },
      {
        event: 'Platform Engineering Meetup #3',
        title: 'スポンサーセッション - 株式会社スタメン',
        speaker: '株式会社スタメン',
        videoUrl: 'https://www.youtube.com/embed/CwDaS0E3FTo&t=6158s',
        documentUrl: '',
      },
      {
        event: 'Platform Engineering Meetup #2',
        title: 'Platform Engineering at Mercari',
        speaker: '@deeeet',
        videoUrl: 'https://www.youtube.com/embed/uscW_w8J7Y8&t=502s',
        documentUrl: 'https://speakerdeck.com/tcnksm/platform-engineering-at-mercari',
      },
      {
        event: 'Platform Engineering Meetup #2',
        title: 'AI 開発への未来へ備えよ！Platform Engineering と GitHub を使った開発',
        speaker: 'Yuki Hattori@yuhattor',
        videoUrl: 'https://www.youtube.com/embed/uscW_w8J7Y8&t=2090s',
        documentUrl: 'https://speakerdeck.com/yuhattor/platform-engineering-and-innersource',
      },
      {
        event: 'Platform Engineering Meetup #2',
        title: 'IaaSにおけるPlatform Engineeringとこれから',
        speaker: '@kazeburo',
        videoUrl: 'https://www.youtube.com/embed/uscW_w8J7Y8&t=4732s',
        documentUrl: 'https://speakerdeck.com/kazeburo/platform-engineering-in-iaas',
      },
      {
        event: 'Platform Engineering Meetup #2',
        title: 'Platform Team と 社内政治 〜 出でよ、Platform Champion 〜',
        speaker: '@kenojiri',
        videoUrl: 'https://www.youtube.com/embed/uscW_w8J7Y8&t=6108s',
        documentUrl: '',
      },
    ]}
  />
  <FullContent 
    title={'メディア掲載事例'}
    highlight='Media'
  >
    <Fragment slot="content">
      <ul>
        <li class="my-2"><a class="underline" href="https://atmarkit.itmedia.co.jp/ait/articles/2304/11/news005.html">@IT - 「Platform Engineering」は何を解決するのか？　誰が何をするものなのか？</a></li>
        <li class="my-2"><a class="underline" href="https://www.publickey1.jp/blog/23/platform_engineeringplatform_engineering_meetup_1.html">Publickey - 「Platform Engineeringへの招待」、開発者の生産性を高めるプラットフォームを作り、運営していくための考え方とは（前編）</a></li>
        <li class="my-2"><a class="underline" href="https://www.publickey1.jp/blog/23/platform_engineeringplatform_engineering_meetup_1_1.html">Publickey - 「Platform Engineeringへの招待」、開発者の生産性を高めるプラットフォームを作り、運営していくための考え方とは（後編）</a></li>
      </ul>
    </Fragment>
  </FullContent>

  <Features2 
    title={'スポンサー'}
    highlight='Sponsors'
    subtitle={'イベントを支援してくださるスポンサー様を募集しています'}
    items={[
      {
        title: '会場スポンサー',
        icon: 'tabler:home-2',
        description: 'イベントの開催会場をご提供いただくスポンサープランです。<br/>スポンサーセッション枠のご提供およびロゴの掲載を行います。'
      },
      {
        title: 'フードスポンサー',
        icon: 'tabler:tools-kitchen-2',
        description: 'イベント終了後の懇親会で食事をご提供いただくプランです。<br/>イベント内でのLT枠のご提供およびロゴの掲載を行います。'
      },
      {
        title: '通年スポンサー',
        icon: 'tabler:gift',
        description: 'Platform Engineering Meetupを通年で支えていただくプランです。<br/>サイトへのロゴの掲載、スポンサー期間中の全アーカイブへのロゴ掲載、特別コラボレーションのセッションなどを行います。'
      }
    ]}
  >
  </Features2>
  <CallToAction title={'お問い合わせ'} callToAction={{text: 'Contact us', href: '/form'}} />

</Layout>
