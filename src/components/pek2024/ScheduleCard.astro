---
import { type PEK2024Proposal } from '~/types';

type TrackType = "Track A" | "Track B";

export interface Props {
  title?: string;
  speakers?: string[];
  affiliation?: string;
  sponsor: boolean;
  session?: PEK2024Proposal;
  trackType: TrackType;
};

const track = Astro.props;
---
<>
  <div class="flex">
    <p class="text-sm font-semibold text-slate-100 bg-themeColor-purple rounded-md px-2">
      {track.trackType}
    </p>
    {track.sponsor && (
      <p class="text-sm font-semibold text-slate-100 bg-themeColor-yellow rounded-md px-2 ml-2">
        Sponsor
      </p>
    )}
  </div>
  <p class="text-base font-bold text-gray-900">
    {track.session ? (
      <a class="hover:underline" href={`/pek2024/sessions/${track.session.uuid}`}>
        {track.session?.title}
      </a>
    ) : (
      track.title
    )}
  </p>
  <p class="text-sm text-gray-500">
    {track.affiliation}
  </p>
  <p class="text-sm font-semibold text-gray-500">
    {track.session ? (
      track.session?.speaker.name
    ) : (
      track.speakers?.join(', ')
    )}
  </p>
<>