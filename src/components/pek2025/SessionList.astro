---
import axios from 'axios';
import SessionInfo from './SessionInfo.astro';
import { getForteeApiUrl, getAffiliation, getJobTitle, getSpeakerProfile, getTalkAbstract } from '../../utils/fortee';
import { type PEKProposalList } from '../../types';

const { data } = await axios.get<PEKProposalList>(
  getForteeApiUrl(2025)
);
const sessionsList = data.proposals;

---

<section class="py-12">
  <div class="container mx-auto px-4">
    <div class="text-center space-y-4 mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-pek2025-primary-600">セッション一覧</h2>
      <p class="text-xl text-gray-700 max-w-3xl mx-auto">
        PEK2025で発表予定のセッション一覧です。多様な視点からPlatform
        Engineeringについて学べる内容をご用意しています。
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        sessionsList.length > 0 ? (
          sessionsList
            // プロポーザル募集中はコメントアウト
            // .filter((session) => session.accepted === true)
            .map((session) => (
              <SessionInfo
                id={session.uuid}
                url={session.url}
                title={session.title}
                abstract={session.abstract}
                speaker={session.speaker}
              />
            ))
        ) : (
          <div class="col-span-full px-8 py-12 flex flex-col items-center justify-center bg-white rounded-xl border border-gray-100">
            <div class="w-16 h-16 bg-pek2025-primary-100 rounded-full flex items-center justify-center mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-pek2025-primary-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="m9 12 2 2 4-4"></path>
              </svg>
            </div>
            <h6 class="text-2xl font-bold text-pek2025-primary-700 mb-2">セッション情報準備中</h6>
            <p class="text-gray-600 text-center">
              PEK2025のセッション情報は近日公開予定です。<br />
              最新情報をお楽しみに！
            </p>
          </div>
        )
      }
    </div>
  </div>
</section>
